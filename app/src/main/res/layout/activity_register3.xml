<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.register.RegisterActivity3">

    <!-- Texto introductorio -->
    <TextView
        android:id="@+id/introduccio3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="#4CAF50"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ImageView para mostrar la foto de perfil -->
    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/introduccio3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- BotÃ³n para seleccionar la foto -->
    <Button
        android:id="@+id/selectPhotoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/register3_btn_selectphoto"
        app:layout_constraintTop_toBottomOf="@id/profileImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />





    <!-- Nom d'usuari -->
    <TextView
        android:id="@+id/nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register3_t_nickname"
        android:textSize="12sp"
        android:textColor="@color/verde_cesped"
        android:background="@drawable/textviews"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/selectPhotoButton"/>


    <EditText
        android:padding="8dp"
        android:id="@+id/et_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/register3_et_nickname"
        android:layout_marginTop="12dp"
        android:background="@drawable/textboxs"
        app:layout_constraintTop_toBottomOf="@id/nickname"/>


    <!-- Contrasenya -->
    <TextView
        android:id="@+id/t_contra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register3_t_password"
        android:textSize="16sp"
        android:paddingBottom="20dp"
        android:textColor="@color/verde_cesped"
        android:background="@drawable/textviews"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/et_nickname"/>

    <EditText
        android:padding="8dp"
        android:id="@+id/et_contra1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/register3_et_password1"
        android:layout_marginTop="12dp"
        android:background="@drawable/textboxs"
        app:layout_constraintTop_toBottomOf="@id/t_contra"/>

    <EditText
        android:padding="8dp"
        android:id="@+id/et_contra2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/register3_et_password2"
        android:layout_marginTop="12dp"
        android:background="@drawable/textboxs"
        app:layout_constraintTop_toBottomOf="@id/et_contra1"/>




    <Button
        android:id="@+id/btn_siguiente3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register3_btn_register"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@id/et_contra2"/>


    <Button
        android:id="@+id/btn_back3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_backbutton"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_siguiente3"/>


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:progress="100"
        android:max="100"
        android:progressDrawable="@drawable/progress_drawable"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
