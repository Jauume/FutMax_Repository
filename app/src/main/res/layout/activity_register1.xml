<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.register.RegisterActivity1">

    <!-- Título -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register1_text"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- GridLayout con ancho/alto dinámicos para adaptarse al espacio -->
    <GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:columnCount="3"
        android:gravity="center"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintBottom_toTopOf="@+id/btn_siguiente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Jugador -->
        <LinearLayout
            android:id="@+id/ll_jugador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/imatges_del_registre_selected"
            android:padding="4dp">

            <ImageView
                style="@style/RegistroImageStyle"
                android:src="@drawable/registre_jugador"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:background="@drawable/rounded_corners" />

            <TextView
                style="@style/RegistroTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register1_rol1" />
        </LinearLayout>

        <!-- Entrenador -->
        <LinearLayout
            android:id="@+id/ll_entrenador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/imatges_del_registre_selected"
            android:padding="4dp">

            <ImageView
                style="@style/RegistroImageStyle"
                android:src="@drawable/registre_entrenador"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:background="@drawable/rounded_corners" />

            <TextView
                style="@style/RegistroTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register1_rol2" />
        </LinearLayout>

        <!-- Preparador -->
        <LinearLayout
            android:id="@+id/ll_preparador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/imatges_del_registre_selected"
            android:padding="4dp">

            <ImageView
                style="@style/RegistroImageStyle"
                android:src="@drawable/registre_preparador"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:background="@drawable/rounded_corners" />

            <TextView
                style="@style/RegistroTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register1_rol3" />
        </LinearLayout>

        <!-- Agente -->
        <LinearLayout
            android:id="@+id/ll_agente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/imatges_del_registre_selected"
            android:padding="4dp">

            <ImageView
                style="@style/RegistroImageStyle"
                android:src="@drawable/registre_agente"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:background="@drawable/rounded_corners" />

            <TextView
                style="@style/RegistroTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register1_rol4" />
        </LinearLayout>

        <!-- Analista -->
        <LinearLayout
            android:id="@+id/ll_analista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/imatges_del_registre_selected"
            android:padding="4dp">

            <ImageView
                style="@style/RegistroImageStyle"
                android:src="@drawable/registre_analista"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:background="@drawable/rounded_corners" />

            <TextView
                style="@style/RegistroTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register1_rol5" />
        </LinearLayout>

        <!-- Aficionado -->
        <LinearLayout
            android:id="@+id/ll_aficionado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/imatges_del_registre_selected"
            android:padding="4dp">

            <ImageView
                style="@style/RegistroImageStyle"
                android:src="@drawable/registre_aficionado"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:background="@drawable/rounded_corners" />

            <TextView
                style="@style/RegistroTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register1_rol6" />
        </LinearLayout>

        <!-- Club -->
        <LinearLayout
            android:id="@+id/ll_club"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/imatges_del_registre_selected"
            android:padding="4dp">

            <ImageView
                style="@style/RegistroImageStyle"
                android:src="@drawable/registre_club"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:background="@drawable/rounded_corners" />

            <TextView
                style="@style/RegistroTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register1_rol7" />
        </LinearLayout>

        <!-- Fisio -->
        <LinearLayout
            android:id="@+id/ll_fisio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/imatges_del_registre_selected"
            android:padding="4dp">

            <ImageView
                style="@style/RegistroImageStyle"
                android:src="@drawable/registre_fisio"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:background="@drawable/rounded_corners" />

            <TextView
                style="@style/RegistroTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register1_rol8" />
        </LinearLayout>

        <!-- Psicólogo -->
        <LinearLayout
            android:id="@+id/ll_psico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/imatges_del_registre_selected"
            android:padding="4dp">

            <ImageView
                style="@style/RegistroImageStyle"
                android:src="@drawable/registre_psico"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:background="@drawable/rounded_corners" />

            <TextView
                style="@style/RegistroTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register1_rol9" />
        </LinearLayout>

    </GridLayout>

    <!-- Botón Siguiente, anclado al fondo -->
    <Button
        android:id="@+id/btn_siguiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/register1_nextbutton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Barra de progreso anclada a la esquina inferior derecha -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:progress="33"
        android:max="100"
        android:progressDrawable="@drawable/progress_drawable"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_back1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="592dp"
        android:text="@string/register_backbutton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
