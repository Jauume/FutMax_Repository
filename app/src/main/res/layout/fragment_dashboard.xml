<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_dashboard_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contenedor del mapa -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/mapFragmentContainer"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Bot칩n Info, peque침o, abajo a la derecha -->
    <ImageButton
        android:id="@+id/buttonInfo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="72dp"
        android:src="@drawable/dashboard_info"
        android:contentDescription="Informaci칩n"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:padding="4dp"
        android:elevation="8dp" />

    <!-- CardView de la leyenda, aparece encima del bot칩n info -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardLegend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="136dp"
        android:visibility="gone"
        android:padding="12dp"
        android:elevation="4dp"
        android:background="@android:color/white"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Jugador -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <View
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@android:color/holo_blue_dark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Jugador"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <!-- Entrenador -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@android:color/holo_red_dark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Trainer"
                    android:textColor="@android:color/black" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    </FrameLayout>