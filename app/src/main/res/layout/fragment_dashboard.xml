    android:id="@+id/fragment_dashboard_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Mapa ocupando todo el espacio -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- BotÃ³n Lupa flotante en la esquina superior derecha -->
    <ImageButton
        android:id="@+id/buttonLupa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="top|end"
        android:src="@drawable/filtrolupita"
        android:contentDescription="Filtroooo"
        android:elevation="8dp"/>
</FrameLayout>
