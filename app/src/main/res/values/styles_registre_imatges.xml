<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo para el contenedor (LinearLayout) -->
    <style name="RegistroImageContainerStyle">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <!-- Estilo para las imÃ¡genes -->
    <style name="RegistroImageStyle">
        <item name="android:layout_width">85dp</item>
        <item name="android:layout_height">85dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- Estilo para el texto -->
    <style name="RegistroTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#4CAF50</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>



</resources>